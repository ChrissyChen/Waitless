    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city"
                android:textSize="20dp"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/searchImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_ripple"
                android:src="@drawable/ic_search_black_24px" />

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/hint"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cuisineCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                card_view:cardCornerRadius="4dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TableRow>
                        <ImageButton
                            android:id="@+id/chineseCuisineButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/chinese_icon"
                            android:background="@drawable/button_ripple"/>

                        <ImageButton
                            android:id="@+id/italianCuisineButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/italian_icon"
                            android:background="@drawable/button_ripple"/>

                        <ImageButton
                            android:id="@+id/japaneseCuisineButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/japanese_icon"
                            android:background="@drawable/button_ripple"/>
                    </TableRow>

                    <TableRow>
                        <ImageButton
                            android:id="@+id/americanCuisineButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/american_icon"
                            android:background="@drawable/button_ripple"/>

                        <ImageButton
                            android:id="@+id/thaiCuisineButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/thai_icon"
                            android:background="@drawable/button_ripple"/>

                        <ImageButton
                            android:id="@+id/viewAllCuisineButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/view_all_icon"
                            android:background="@drawable/button_ripple"/>
                    </TableRow>

                </TableLayout>


            </android.support.v7.widget.CardView>

            <!-- A CardView that contains a TextView -->
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/hotRestaurantCardView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/info_text2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/app_name" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>